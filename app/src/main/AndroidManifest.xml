<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jailson.mylist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/register2"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activity.ListsActivity"
            android:label="@string/lists" />
        <activity
            android:name=".activity.ItemsActivity"
            android:label="@string/items" />
        <activity
            android:name=".activity.AddItemActivity"
            android:label="@string/add_item"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activity.AddListActivity"
            android:label="@string/add_list"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".activity.EditItemActivity"
            android:label="@string/edit_item"
            android:windowSoftInputMode="stateHidden"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>