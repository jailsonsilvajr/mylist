<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2.8">

        <ImageView
            android:id="@+id/imageview_iten"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/icon_product"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/textview_name_iten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Item: "/>

        <TextView
            android:id="@+id/textview_mark_iten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Marca: "/>

        <TextView
            android:id="@+id/textview_price_iten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="PreÃ§o: R$ "/>

        <TextView
            android:id="@+id/textview_qtd_iten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:text="Quantidade: "/>

    </LinearLayout>

</LinearLayout>